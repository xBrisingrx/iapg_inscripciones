<h1>Inscripciones</h1>

<p>Asistencia: <%= @confirm %></p>
</div>
<div class="row justify-content-between">
  <div class="col-4">
    <%= link_to "<i class='fa fa-user'></i>Nueva inscripcion".html_safe, new_inscription_path, class: 'btn btn-primary ', remote: true %>
  </div>
  <div class="col-4">
    <%= link_to "<i class='fa fa-users'></i> Lista asistencia".html_safe, inscription_list_inscriptions_path(format: :xlsx ), class: 'btn u-btn-outline-pink u-btn-hover-v1-2 mb-2 ml-2'%>
  </div>
</div>
<%= render( partial: 'shared/table', 
            locals: { table_id: 'inscriptions', 
                      color: 'blue', 
                      icon: 'fa-home',
                      title: "Inscripciones registradas", 
                      col_names: [ 'Empresa', 'Nombre','DNI','Email','Forma de pago','Celiaco', 'Asistio' ,'Acciones' ] }) %>

<!-- Modal para eliminar inscription -->
<div class="modal fade" id="modal-disable-inscription" role="dialog" aria-hidden="true">
  <div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Â¿ Esta seguro de dar de baja esta inscription ?</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= form_with(url: disable_inscriptions_path, id: 'form-disable-inscription') do |form| %>
          <%= form.hidden_field :inscription_id %>
          <%= form.submit 'Eliminar', class: 'btn u-btn-red g-mr-10' %>
          <button type="button" data-dismiss="modal" class="btn u-btn-teal g-mr-10"> Cerrar </button>
        <% end %>
      </div>
    </div>
  </div>
</div>
<!-- Fin modal eliminar inscription -->