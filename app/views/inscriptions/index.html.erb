<h1>Inscripciones</h1>

<%# link_to "<i class='fa fa-plus'></i> Registrar institución".html_safe, new_institution_path(), remote: true, class: 'btn u-btn-outline-primary u-btn-hover-v1-2 mb-2' %>

<%= render( partial: 'shared/table', 
            locals: { table_id: 'inscriptions', 
                      color: 'blue', 
                      icon: 'fa-home',
                      title: "Inscripciones registradas", 
                      col_names: [ 'Empresa', 'Nombre','DNI','Email','Forma de pago','Celiaco', 'Acciones' ] }) %>

<!-- Modal para eliminar inscription -->
<div class="modal fade" id="modal-disable-inscription" role="dialog" aria-hidden="true">
  <div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">¿ Esta seguro de dar de baja esta inscription ?</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= form_with(url: disable_inscriptions_path, id: 'form-disable-inscription') do |form| %>
          <%= form.hidden_field :inscription_id %>
          <%= form.submit 'Eliminar', class: 'btn u-btn-red g-mr-10' %>
          <button type="button" data-dismiss="modal" class="btn u-btn-teal g-mr-10"> Cerrar </button>
        <% end %>
      </div>
    </div>
  </div>
</div>
<!-- Fin modal eliminar inscription -->